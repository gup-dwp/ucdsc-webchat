<div class="form-group {{classes}}" {{attributes}}>
  <label class="form-label-bold">
    {{label}}
  </label>
  <div class="form-error validation-message">
    {{error}}
  </div>
  <div class="form-hint">
    {{help}}
  </div>
  <textarea class="form-control" rows="5" {{inputAttributes}}>
    {{value}}
  </textarea>
</div>
