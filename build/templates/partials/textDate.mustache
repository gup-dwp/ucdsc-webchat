<div class="form-group date-group {{classes}}">
  <fieldset>
    <legend class="form-label-bold">
      {{label}}
    </legend>
    <div class="form-date">
      <div class="form-hint">
        {{help}}
      </div>
      <div class="form-error validation-message">
        {{error}}
      </div>
      <div class="form-group form-group-day">
        <label>Day</label>
        <input type="text" class="day js-day form-control" size="2" maxlength="2">
      </div>
      <div class="form-group form-group-month">
        <label>Month</label>
        <input type="text" class="month js-month form-control" size="2" maxlength="2">
      </div>
      <div class="form-group form-group-year">
        <label>Year</label>
        <input type="text" class="year js-year form-control" size="4" maxlength="4">
      </div>
    </div>
  </fieldset>
</div>
